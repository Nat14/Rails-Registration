<h1 class="text-center">Hello <%= @user.firstname %>!</h1>

<div class="formCont">
  <div class="brTop"></div>
  <div class="form">
    <p>
      First Name: <%= @user.firstname %><br/>
      Last Name: <%= @user.lastname %><br/>
      Street Address: <%= @user.streetaddr %><br/>
      City: <%= @user.city %><br/>
      State: <%= @user.state %><br/>
      Zipcode: <%= @user.zipcode %><br/>
      Country: <%= @user.country %><br/>
      <ul>
        <% @user.phones.each do |x| %>
        <li>Phone: <%= x.phonenumber %></li>
        <% end %>
      </ul></br>
      Username: <%= @user.username %><br/>
      Password: ***********<br/>
      User Id: <%= @user.id %>
    </p>
  </div>
  
  <% if cookies[:userid].nil? %>
    <a class="btn btn-info" href="/registration/login">Login</a>
  <% end %>

  <a class="btn btn-info" href="/registration/logout">Log Out</a>
</div>
